
{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "js/**/*", "use": "@vercel/static" },
    { "src": "components/**/*", "use": "@vercel/static" },
    { "src": "styles.css", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/functions/v1/(.*)",
      "dest": "https://bsndismiessofvhglzrv.supabase.co/functions/v1/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/components/(.*)",
      "dest": "/components/$1",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "/styles.css",
      "dest": "/styles.css",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.(js|css|html|png|jpg|jpeg|gif|svg|ico|mp4|webm))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "VITE_SUPABASE_URL": "@vite_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key",
    "VITE_APP_NAME": "@vite_app_name",
    "VITE_DEBUG_MODE": "@vite_debug_mode",
    "VITE_MIN_ORDER_AMOUNT": "@vite_min_order_amount",
    "VITE_TELEGRAM_TOKEN": "@vite_telegram_token",
    "VITE_TELEGRAM_CHAT_ID": "@vite_telegram_chat_id",
    "VITE_GOOGLE_SCRIPT_URL": "@vite_google_script_url",
    "VITE_GOOGLE_SHEETS_ID": "@vite_google_sheets_id",
    "VITE_PUBLIC_SITE_URL": "@vite_public_site_url"
  }
}
